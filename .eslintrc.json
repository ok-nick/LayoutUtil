{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"jsx": true,
		"useJSXTextNode": true,
		"ecmaVersion": 2018,
		"sourceType": "module",
		"project": "./tsconfig.json"
	},
	"plugins": [
		"@typescript-eslint",
		"roblox-ts"
	],
	"extends": [
		"plugin:@typescript-eslint/recommended",
		"plugin:roblox-ts/recommended"
	],
	"rules": {
		"semi": "warn",
		"eol-last": "warn",
		"no-undefined": "error",
		"no-empty": "warn",
		"no-shadow": "off",
		"@typescript-eslint/no-shadow": "warn",
		"no-unused-vars": "off",
		"@typescript-eslint/no-unused-vars": "warn"
	}
}
